  <body>
    <div class="main flex h-screen w-screen overflow-hidden  bg-slate-900">

      <div class="left h-full w-2/6 bg-slate-500 border-r-2">

        <!-- top-section -->
          <header class="p-3 flex justify-between bg-slate-600">
