          </div>

        <!-- search-section -->
          <div class="search-container w-full h-16 flex items-center bg-slate-500 relative border-t-2 ">
          <div class="input w-full px-4">
            <i class="fa-solid fa-magnifying-glass"></i>
            <input class="w-full text-center h-10 text-2xl" type="text" placeholder="Search or start new chat   "></div>
            <i  class="fa-sharp fa-solid fa-bars-filter"></i>
          </div>

          <div class="chat-list  border-t-2  ">
          </div> 
  
      </div>
 

      <div  class="right-side h-full w-full bg-slate-700 hidden">

        <header class="p-3 flex justify-between bg-slate-600">
          <div class="flex items-center gap-2">
            <div class="img-container h-20 w-20 bg-slate-700 rounded-full overflow-auto">
              <img id="current-ChatDp" src="" alt="">
            </div>
            <div id="current-chat-Username" class="text-3xl font-bold">UserName</div>
          </div>
          <div class="flex items-center gap-2">
            <p class="font-semibold text-amber-800 ">###</p>
            <p class="font-semibold text-gray-300 text-2xl "><i class="fa-solid fa-ellipsis-vertical"></i></p>
          </div>
        </header>

        <!--chat-container -->
          <div class="chat-container">

          </div>

        <!--input-bottom -->
          <div class="chatbox-input">
        <i class="fa-regular fa-face-grin"></i>
        <i class="fa-sharp fa-solid fa-paperclip"></i>
        <input type="text" id="inputmsg" placeholder="Type a message">
        <i class="fa-solid fa-microphone"></i>
          </div>

      </div>
      

    </div>
